<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
            android:layout_width="373dp"
            android:layout_height="330dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/gridLayout">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView"
                app:layout_column="0"
                app:layout_row="0"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView2"
                app:layout_column="1"
                app:layout_row="0"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView3"
                app:layout_column="2"
                app:layout_row="0"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView4"
                app:layout_column="0"
                app:layout_row="1"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView5"
                app:layout_column="1"
                app:layout_row="1"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView6"
                app:layout_column="2"
                app:layout_row="1"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView7"
                app:layout_column="0"
                app:layout_row="2"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView8"
                app:layout_column="1"
                app:layout_row="2"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView9"
                app:layout_column="2"
                app:layout_row="2"
                android:onClick="increaseScore"
        />
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time: 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" android:id="@+id/timeText"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="95dp"
            android:layout_height="37dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scoreText" android:textSize="24sp" android:textAlignment="center"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"/>
</android.support.constraint.ConstraintLayout>